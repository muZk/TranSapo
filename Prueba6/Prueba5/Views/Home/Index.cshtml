    {
        <p><font size=3 color=green>¡Gracias por tu Aporte!</font></p>
        Prueba5.Controllers.HomeController.GraciasMsg = false;
    }
    <fieldset>
        <legend>IngresarInformacion</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParaderoRecorrido)
        </div>
