@model Prueba5.Models.IngresarInformacion

@{
    ViewBag.Title = "TranSapo";
}

<!--Visitantes-->
@if (!Request.IsAuthenticated)
{
    <div class="mainLeft">
    <h1>Bienvenido a TranSapo</h1>

    <!--Mensajes-->
    @if (Prueba5.Controllers.HomeController.Mensajes.Count > 0)
    {
        foreach (string msg in Prueba5.Controllers.HomeController.Mensajes)
        {
            <div class="mensaje">@msg</div>
        }
        Prueba5.Controllers.HomeController.Mensajes.Clear();
    }
    <!--Fin Mensajes-->
    <p><a href="../Account/login"><strong>Autentifícate</strong></a> para acceder a las grandes funcionalidades que te ofrecemos!</p>
    <p>¿No tienes cuenta? <a href="../Account/register"><strong>Regístrate</strong></a>, ¡es gratis!</p>
           
    </div>
}
// Usuarios
else
{
    <div class="mainLeft">
    <h1>Bienvenido a TranSapo</h1>
    <!--Mensajes-->
   
    @if (Prueba5.Controllers.HomeController.Mensajes.Count > 0)
    {
        foreach (string msg in Prueba5.Controllers.HomeController.Mensajes)
        {
        <div class="mensaje">@msg</div>
        }
        Prueba5.Controllers.HomeController.Mensajes.Clear();
    }
    
    @Html.ActionLink("Ver información estadística", "Index","Estadisticas")
